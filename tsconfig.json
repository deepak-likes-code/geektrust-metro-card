{
  "compilerOptions": {
    "target": "es2019", // Specify ECMAScript target version
    "module": "commonjs", // Specify module code generation
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables CommonJS/AMD/UMD module interop
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file
    "outDir": "./dist", // Specify output directory
    "rootDir": "./src", // Specify the root directory of input files
    "resolveJsonModule": true // Allow importing .json files
  },
  "include": ["src/**/*.ts"], // The files to include in the compilation
  "exclude": ["node_modules"] // The files to exclude from the compilation
}
